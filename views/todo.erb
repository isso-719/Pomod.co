<body>

  <menu>
    <a class="logo" href="/"></a>
    <a href="/chart"><i class="fas fa-chart-line"></i></a>
    <a href="/todo" class="disabled"><i class="fas fa-check"></i></a>
    <a href="/settings"><i class="fas fa-cog"></i></a>
    <a href="/signout"><i class="fas fa-sign-out-alt"></i></a>
  </menu>
  <main>
    <h1>Todo<hr></h1>
    <div id="container">
      <div class="time_set">
        <h2>Todoを作成</h2>
        <h3>内容</h3>
        <input id="content" class="content" type="text" autocomplete="off">
        <h3>日付</h3>
        <input class="day" type="text" value="<%= Date.today %>" id="datepicker" autocomplete="off" readonly="readonly">
        <h3>時間</h3>
        <div class="picker">
          <input class="hour" type="number" value="0" size="2" min="0" max="24" pattern="\d*">
          <p>時</p>
          <input class="min" type="number" value="0" size="2" min="00" max="59" pattern="\d*">
          <p>分</p>
        </div>
        <br>
        <p class="fail" style="display: none;">この数字は指定できません</p>
        <button class="set_todo">Todoを作成</button>
      </div>
      <div id="notice">
        <h2>Todo</h2>
        <div class="card_wrap">
          <% @todos.reverse.each do |todo| %>
          <div class="card">
            <div>
              <h4><%= todo.content %></h4>
              <small><%= todo.deadline.in_time_zone('Tokyo') %>まで</small>
              <div class="toggle-switch">
                <input id="toggle" class="<%= todo.id %>" type='checkbox' />
                <label for="toggle" class="toggle-label" />
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
